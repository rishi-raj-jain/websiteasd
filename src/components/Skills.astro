---
import { skills } from "@/data";
import LinkText from "./LinkText.astro";
---

<article>
  <p class="text-sm">And I'm interested in</p>
  <nav class="grid grid-cols-2 gap-1 sm:flex sm:gap-4">
    {
      skills.map((skill) => (
        <li class="list-none hover:opacity-75 transition-opacity">
          <LinkText to={skill.to} color={skill.color}>
            {skill.name}
          </LinkText>
        </li>
      ))
    }
  </nav>
</article>
