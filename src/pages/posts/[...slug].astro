---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const postsEntries = await getCollection("posts");
  return postsEntries.map((postEntry) => ({
    params: { slug: postEntry.slug },
    props: { postEntry },
  }));
}

const { postEntry } = Astro.props;
const { Content } = await postEntry.render();
---

<Layout postsTitle={postEntry.data.title}>
  <article class="flex flex-col gap-6">
    <h1 class="text-5xl">{postEntry.data.title}</h1>
    <section>
      <Content />
    </section>
  </article>
</Layout>
