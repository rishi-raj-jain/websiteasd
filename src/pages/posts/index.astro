---
import PostsLayout from "@/layouts/PostsLayout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
---

<PostsLayout>
  <ul class="flex flex-col">
    {
      allPosts.map((post) => (
        <li>
          <a href={`/posts/${post.slug}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</PostsLayout>
