---
import PostsLayout from "@/layouts/PostsLayout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
---

<PostsLayout
  title="Posts - Js Park"
  description="Contains posts to share experiences gained while working on a web project."
  url="https://jspark.dev/posts"
>
  <ul class="flex flex-col">
    {
      allPosts.map((post) => (
        <li class="hover:bg-white hover:bg-opacity-50 transition-opacity duration-500 px-4">
          <a href={`/posts/${post.slug}`} class="block">
            {post.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</PostsLayout>
