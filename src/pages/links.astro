---
import Card from "../components/Card.astro";
import { links } from "../data";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Links">
  <nav>
    <ul class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
      {
        links.map((link) => (
          <li>
            <Card {...link} />
          </li>
        ))
      }
    </ul>
  </nav>
</Layout>
